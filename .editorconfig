# http://editorconfig.org

root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_size              = 2
indent_style             = space
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.cs] 
end_of_line = crlf
indent_size = 4

[*.cake]
end_of_line = crlf
indent_size = 4

[*.ps1] 
end_of_line = crlf
indent_size = 4

[*.props] 
end_of_line = crlf

[*.csproj] 
end_of_line = crlf

[*.sln] 
end_of_line = crlf
